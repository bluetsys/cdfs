@model NameNode.Models.NameNodeStatusModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="icon" type="image/ico" href="favicon.ico" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <title>CDFS Health</title>
</head>
<body>
    <header class="navbar navbar-inverse" role="banner">
        <div class="container">
            <div class="navbar-header">
                <div class="navbar-brand">Cdfs</div>
            </div>

            <ul class="nav navbar-nav" id="ui-tabs">
                <li><a href="#tab-overview">Overview</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Utilities <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="explorer">Browse the file system</a></li>
                        <li><a href="logs">Logs</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </header>

    <div class="container">

        <table class="table table-bordered table-striped">
            <tr><th>Started:</th><td>@Html.DisplayFor(model => model.Started)</td></tr>
            <tr><th>Live Nodes:</th><td>@Html.DisplayFor(model => model.LiveNodes)</td></tr>
            <tr><th>Dead Nodes:</th><td>@Html.DisplayFor(model => model.DeadNodes)</td></tr>
        </table> 

        <div class="row"><p>Cdfs, 2017.</p></div>
    </div>
</body>
</html>